<div class="container">
    <div class="row">
        <div class="col-3">
            <figure>
                <img src="{{theBeer.image_url}}">
            </figure>
        </div>
        <div class="col-9">
            <h1>{{theBeer.tagline}}</h1>
            <p>
                {{theBeer.name}}
            </p>
            <p>
                {{theBeer.description}}
            </p>
            <h3>Food Pairing</h3>
            <ul>
                {{#each theBeer.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>
                {{theBeer.brewers_tips}}
            </p>
        </div>
    </div>
        
    <hr>
</div>